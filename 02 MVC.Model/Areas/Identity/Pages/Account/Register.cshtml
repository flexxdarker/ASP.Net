@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex row justify-content-center">
    <div class="col-md-6 text-center">
        <h1>@ViewData["Title"]</h1>
        <section>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>Create a new account.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control text-dark" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="text-dark">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Birthdate" class="form-control text-dark " autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Birthdate" class="text-dark">Birth Date</label>
                    <span asp-validation-for="Input.Birthdate" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control text-dark" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="text-dark">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control text-dark" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword" class="text-dark">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                @if (User.IsInRole("Admin"))
                {   
                    <div class="checkbox mb-3">
                        <label asp-for="Input.AdminUser" class="form-label">
                            <input class="form-check-input" asp-for="Input.AdminUser" />
                            @Html.DisplayNameFor(m => m.Input.AdminUser)
                        </label>
                    </div>
                }
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-danger text-dark">Register</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
